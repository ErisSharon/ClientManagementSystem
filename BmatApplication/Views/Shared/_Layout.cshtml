<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BmatApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BmatApplication.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Custom styles for sidebar */
        .sidebar {
            height: 80%;
            position: fixed;
            top: 60px;
            left: 0;
            width: 250px;
            background-color: #007bff;
            padding-top: 10px;
            height: calc(100vh - 60px); 
            z-index: 1020; 
            color: white;
        }

        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden; 
        }
        
        .navbar {
            position: fixed;
            background-color: #008080;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030; 
            height: 60px; 
        }

        .main-content {
            margin-left: 250px;
            position: fixed;
            overflow-y: auto;
            width: calc(100% - 250px);
            height: 100vh;
            padding-top: 10PX;
            box-sizing: border-box;
            background-color: #f8f9fa;
        }

            .main-content table {
                width: 100%; 
                border-collapse: collapse; 
                margin-top: 20px; 
            }

            .main-content h1 {
                margin: 0; 
                padding-bottom: 10px;
            }

        .content-wrapper {
            height: 100vh; /* Full viewport h
            overflow-y: auto; /* Enable scrolling only vertically */
            box-sizing: border-box; /* Includes padding in width/height calculations */
        }


        /* Footer styles */
        .footer {
            margin-left: 250px; /* Match the sidebar width */
            padding: 10px 20px;
            position: fixed;
            background-color: #f8f9fa;
            text-align: center;
        }


        .sidebar a {
            text-decoration: none;
            font-size: 18px;
            color: #ffffff;
            display: block;
            padding: 10px 20px;
            transition: all 0.3s ease-in-out;
                
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .navbar-icons {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .navbar-icons i {
            font-size: 1.5rem;
            cursor: pointer;
        }

       
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
              @*   <button class="btn btn-outline-secondary me-3" onclick="toggleSidebar()">☰</button>
                  <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                   </a> *@
                <img src="assets/img/logo.png" alt="" style="height: 40px; margin-right: 10px;">
                <span class="fw-bold text-primary">Client Track</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">

                    <div class="navbar-icons ms-auto d-flex align-items-center">
                        <!-- Search Icon -->
                        <form class="d-flex me-3" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search">
                            @* <button class="btn btn-outline-secondary" type="submit">
                                <i class="bi bi-search"></i>
                            </button> *@
                        </form>
                        <!-- Profile Icon -->
                        <div class="dropdown">
                            <a href="#" class="text-dark" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle fs-4"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                    @* <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul> *@
                   @*  <div class="navbar-icons">
                        <!-- Search Icon -->
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search..." aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                        <!-- Profile Icon -->
                        <a href="#" class="text-dark" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profile</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div> *@
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar" id="sidebar">
        <a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
        <a class="dropdown-toggle" href="#clientsSubmenu" data-bs-toggle="collapse" aria-expanded="false">
            Clients
        </a>
        <div class="collapse" id="clientsSubmenu">
            <a asp-area="" asp-controller="Clients" asp-action="AddClients" class="ms-3">Add Client</a>
            <a asp-area="" asp-controller="Clients" asp-action="ViewClients" class="ms-3">View Clients</a>
        </div>
        <a asp-area="" asp-controller="Products" asp-action="Index">Products</a>
        <a asp-area="" asp-controller="Reports" asp-action="Index">Reports</a>
        <a asp-area="" asp-controller="Settings" asp-action="Index">Settings</a>
    </div>

    <div class="container-fluid main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BmatApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Sidebar toggle function
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            if (sidebar.style.marginLeft === '-250px') {
                sidebar.style.marginLeft = '0';
                mainContent.style.marginLeft = '250px';
            } else {
                sidebar.style.marginLeft = '-250px';
                mainContent.style.marginLeft = '0';
            }
        }
    </script>
</body>
</html>
