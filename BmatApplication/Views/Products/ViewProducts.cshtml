@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-card:hover {
                transform: scale(1.05);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .product-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #007bff;
        }

        .product-description {
            font-size: 0.9rem;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="container mt-5" style="height: 100vh; overflow: hidden; margin-left: 250px;">
        <div class="text-center mb-4">
            <h1 class="fw-bold">Our Products</h1>
            <p>Explore the range of services we offer to simplify your financial operations.</p>
        </div>
        <div class="row g-4">
            <!-- Mobile Banking Card -->
            <div class="col-md-6">
                <div class="card product-card p-3">
                    <div class="card-body text-center">
                        <h5 class="product-title">Mobile Banking</h5>
                        <p class="product-description">
                            Our mobile banking solution is designed to bring banking services to the customer’s phone either through USSD (*123#) or mobile app.
                            The customer is able to make transactions or make queries to the bank through his/her smart or ordinary phone.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Agency Banking Card -->
            <div class="col-md-6">
                <div class="card product-card p-3">
                    <div class="card-body text-center">
                        <h5 class="product-title">Agency Banking</h5>
                        <p class="product-description">
                            SmartAgent is an application that extends the banks services to its clients via signed agents. 
                            The solution is very cost effective compared to the traditional POS agency banking.
                            It comes with an android application that is configured for the bank’s agents.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Internet Banking Card -->
            <div class="col-md-6">
                <div class="card product-card p-3">
                    <div class="card-body text-center">
                        <h5 class="product-title">Internet Banking</h5>
                        <p class="product-description">
                            Our internet banking solution is designed to bring banking services to the customer’s desktop. 
                            The customer can conduct banking transactions online through the web browser using a user-friendly and secure setup, 
                            allowing users and organizations to independently verify identities and transactions in a simple, convenient and cost effective way.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Automated Clearing House Card -->
            <div class="col-md-6">
                <div class="card product-card p-3">
                    <div class="card-body text-center">
                        <h5 class="product-title">Automated Clearing House</h5>
                        <p class="product-description">
                            BELPAY payment and settlement solution that provides a single unified system for processing 
                            all ACH payment types based on the clearing house standards. It provides an integrated system for all 
                            interbank electronic payments i.e. Credit(EFT), Direct Debits(DD), cheques and RTGS.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
