@{
    Layout = null;
}
@model BmatApplication.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden; /* Prevent scrollbars */

        body {
            background-image: url('/images/background.jpg'); /* Path to your image */
            background-size: contain; /* Ensures the image covers the entire viewport */
            background-repeat: no-repeat; /* Prevents the image from repeating */
            background-position: center; /* Centers the image */
            margin: 0; /* Removes default body margins */
            height: 100vh; /* Ensures the body fills the viewport height */
            overflow: hidden; /* Prevents scrollbars from appearing */
        }



        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 50%; /* Adjust as needed */
            background-color: rgba(0, 0, 0, 0.5); /* Adjust opacity */
            z-index: 1;
        }

        .card{
            position: absolute;
            top: 50%; /* Position form vertically at 50% */
            right: 50%; /* Position form horizontally at 50% */
            transform: translate(-50%, -50%); /* Center the form by adjusting for the width and height of the form */
            padding: 20px;
            max-width: 800px;
            background-color: rgba(255, 255, 255, 0.7); /* Optional: Add a semi-transparent background to the form for readability */
            border-radius: 10px; /* Optional: Add rounded corners to the form */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-radius: 30px;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-control {
            font-size: 1rem;
        }

        .container {
            max-width: 800px;
            margin-top: 160px;
        }

    </style>
</head>
<body class="login-background">
    <img src="/images/background.jpg" alt="Background Image" />
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" asp-controller="Accounts" method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="Email" asp-for="Email" placeholder="Enter your email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="Password" asp-for="Password" placeholder="Enter your password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Validation Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
