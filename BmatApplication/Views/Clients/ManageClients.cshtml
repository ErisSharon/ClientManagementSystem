@model BmatApplication.Models.ClientsModel

<h2>Manage Client</h2>

    <div class="card justify-content-center align-items-start" style="min-height: 80vh; overflow: auto; padding: 20px; margin-left: 250px;">
    <div class="card-header">
        <h4>Client Details</h4>
    </div>
    <div class="card-body">
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Country:</strong> @Model.Country</p>
        <p><strong>Product:</strong> @Model.Product</p>
        <p><strong>Status:</strong> @Model.Status</p>
    </div>
    <div class="d-flex justify-content-start gap-2">
        <form method="post" asp-action="Disable" asp-controller="Clients" asp-route-id="@Model.ClientId">
            <button class="btn btn-warning">Disable</button>
        </form>

        <a href="@Url.Action("Edit", "Clients", new { id = Model.ClientId })" class="btn btn-primary">Edit</a>

        <form method="post" asp-action="Delete" asp-controller="Clients" asp-route-id="@Model.ClientId" onsubmit="return confirm('Are you sure you want to delete this client?');">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>